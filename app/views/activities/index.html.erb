<p id="notice"><%= notice %></p>  

<div class="container">
      <p><strong>we have now <%=@activities.length %> Activities records :</strong>
      <button id = "myFunction" class="btn btn-info">view all</button>
      </p>
  <div class ="row-padding" id="demo">
  <table class="table table-bordered table-hover table-condensed ">
      <thead>
        <tr>
          
          <th>Activity name</th>
          <th>Activity date</th>
          <th>Activity duration</th>
          <th>User</th>
          <th>Actions</th>

        </tr>
      </thead>

      <tbody>

            <% @activities.each do |activity| %>
            <tr>
               
                <td><%= activity.activity_name %></td>
                 <td><%= activity.activity_date %></td>
                 <td><%= activity.activity_duration %></td>
                 <td><%= activity.user.email %></td>
                 <td>
                  <div class="btn-group btn-group-sm">
                   <%= link_to 'Show', activity, class: "btn btn-info" %>
                   <% if activity.user == current_user %>
                   <%= link_to 'edit', edit_activity_path(activity),class: "btn btn-warning" %>
                   <%= link_to 'destroy', activity ,class: "btn btn-danger",method: :delete, data: { confirm: 'are you sure?'} %>
                   <% end %>
                     
                 </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


